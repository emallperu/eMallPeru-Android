<?xml version='1.0' encoding='utf-8'?>
<widget id="com.daljo25.emallperu" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>eMall Peru</name>
    <description>
        App Oficial de eMallperu.com el primer mall virtual del Peru
    </description>
    <author email="daljo25@emallperu.com" href="https://emallperu.com">
        PhoneGap Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="24" />
    <plugin name="cordova-plugin-battery-status" source="npm" spec="~1.2.4" />
    <!--- se inhabilita los plugins de camara
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.4.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.4.3" /> 
    -->
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.6" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.5" />
    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/36.png" />
        <icon density="mdpi" src="www/res/icon/android/48.png" />
        <icon density="hdpi" src="www/res/icon/android/72.png" />
        <icon density="xhdpi" src="www/res/icon/android/96.png" />
        <icon density="xxhdpi" src="www/res/icon/android/144.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/192.png" />
        <splash density="land-ldpi" src="www/res/screen/android/240.png" />
        <splash density="land-mdpi" src="www/res/screen/android/320.png" />
        <splash density="land-hdpi" src="www/res/screen/android/480.png" />
        <splash density="land-xhdpi" src="www/res/screen/android/720.png" />
        <splash density="land-xxhdpi" src="www/res/screen/android/960.png" />
        <splash density="land-xxxhdpi" src="www/res/screen/android/1280.png" />
        
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
